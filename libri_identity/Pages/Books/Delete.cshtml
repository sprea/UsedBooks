@page
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model libri_identity.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete - Book";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 style="color: lawngreen">Delete</h1>
@if (SignInManager.IsSignedIn(User) && User.Identity.Name == Model.Book.Name_Student && Model.Book.State == 0)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Name)
            </dd>
            <dt class="col-sm-2">
                Author
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Author)
            </dd>
            <dt class="col-sm-2">
                Subject
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Subject)
            </dd>
            <dt class="col-sm-2">
                Course
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Course)
            </dd>
            <dt class="col-sm-2">
                Class
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Class)
            </dd>
            <dt class="col-sm-2">
                Year
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Year)
            </dd>
            <dt class="col-sm-2">
                Publisher
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Publisher)
            </dd>
            <dt class="col-sm-2">
                ISBN
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Isbn)
            </dd>
            <dt class="col-sm-2">
                Student
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Name_Student)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Book.Id" />
            <button class="btn btn-danger"><i class="fa fa-remove"></i></button>
        </form>
    </div>

    <div class="text-center">
        <a asp-page="./Index">Back to List</a>
    </div>
}
else if (User.Identity.Name != Model.Book.Name_Student)
{
    <hr />
    <div>
        <h6>You can remove only your books</h6>
        <a asp-page="./Index">Back to List</a>
    </div>
}
else if (Model.Book.State == 1)
{
    <hr />
    <div>
        <h6>This book is reserved, you can't remove it</h6>
        <a asp-page="./Index">Back to List</a>
    </div>
}
